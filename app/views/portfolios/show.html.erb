<div class="container portfolio-container">
  <div class="row">
    
    <div class="col-md-7">
      <p><%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %></p>
    </div>
    
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= markdown @portfolio_item.body %></p>
      <hr>
      <% if !(@portfolio_item.technologies.count == 0) %>
        <h4>Technologies Used</h4>
        <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
        <% end %>
      <% end %>  
      
      <% if logged_in?(:site_admin) %>
      <div>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-success' %>
      </div>
      <% end %>
      
    </div>
    
  </div>
</div>

